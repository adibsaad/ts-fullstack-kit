{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@common/*": ["./src/common/*"],
      "@server/*": ["./src/server/*"]
    },
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "@0no-co/graphqlsp",
        "schema": "./src/server/graphql/generated/schema.graphql"
      }
    ]
  }
}
