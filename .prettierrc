{
  "singleQuote": true,
  "tabWidth": 2,
  "arrowParens": "avoid",
  "printWidth": 80,
  "semi": false,
  "htmlWhitespaceSensitivity": "ignore",
  "importOrder": [
    "^react",
    "<THIRD_PARTY_MODULES>",
    "^@common/(.*)$",
    "^@server/(.*)$",
    "^@frontend/(.*)$",
    "(.*)css$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],
  "trailingComma": "all"
}
